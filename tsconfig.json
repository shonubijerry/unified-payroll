{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"declaration": true,
		"outDir": "./lib",
		"strict": true,
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"baseUrl": "./src",
		"paths": {
			"@/*": ["./*"],
			"@services/*": ["./services/*"],
			"@test/*": ["./__tests__/*"],
			"@fixtures/*": ["./__tests__/fixtures/*"],
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "**/__tests__/**/*"],
}