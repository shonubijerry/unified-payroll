{
  "name": "unified-payroll",
  "version": "1.0.0",
  "description": "payroll calculation method unified",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "jest --config jestconfig.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublish": "npm test && npm run lint && npm run format",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@bitbucket.org/verifing/unified-payroll.git"
  },
  "author": "Korede Shonubi",
  "license": "ISC",
  "homepage": "https://bitbucket.org/verifing/unified-payroll#readme",
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@typescript-eslint/eslint-plugin": "5.3.0",
    "@typescript-eslint/parser": "5.3.0",
    "eslint": "8.1.0",
    "eslint-config-airbnb": "18.2.1",
    "husky": "7.0.4",
    "jest": "^27.3.1",
    "lint-staged": "11.2.6",
    "prettier": "^2.4.1",
    "ts-jest": "^27.0.7",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.4.4"
  },
  "files": [
    "lib/**/*"
  ],
  "keywords": [
    "Bento"
  ],
  "dependencies": {
    "moment": "^2.29.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "git add"
    ]
  },
  "moduleDirectories": [
    "node_modules",
    "src"
  ]
}
